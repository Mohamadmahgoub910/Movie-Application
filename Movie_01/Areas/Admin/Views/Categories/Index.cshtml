@using MovieApp.Core.Entities
@model IEnumerable<Category>
@{
    ViewData["Title"] = "التصنيفات";
}

<style>
    .category-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        margin-bottom: 2rem;
        background: white;
    }

        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        .category-card img {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

    .category-card-body {
        padding: 1.5rem;
    }

    .movie-count {
        font-size: 2rem;
        font-weight: bold;
        color: #667eea;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-tags me-2"></i>
        التصنيفات
    </h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus-circle me-2"></i>إضافة تصنيف جديد
    </a>
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var category in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="category-card">
                    <img src="@(string.IsNullOrEmpty(category.ImageUrl) ? "/images/placeholder.jpg" : category.ImageUrl)"
                         alt="@category.Name" />
                    <div class="category-card-body">
                        <h4 class="mb-3">@category.Name</h4>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">عدد الأفلام:</span>
                            <span class="movie-count">@category.Movies.Count</span>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@category.Id"
                               class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-eye"></i> تفاصيل
                            </a>
                            <a asp-action="Edit" asp-route-id="@category.Id"
                               class="btn btn-sm btn-outline-warning flex-fill">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.Id"
                               class="btn btn-sm btn-outline-danger flex-fill">
                                <i class="fas fa-trash"></i> حذف
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-3x mb-3"></i>
                <h4>لا توجد تصنيفات</h4>
                <p>ابدأ بإضافة أول تصنيف للأفلام.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>إضافة تصنيف جديد
                </a>
            </div>
        </div>
    }
</div>
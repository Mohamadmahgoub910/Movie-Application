@using MovieApp.Core.Entities
@model Cinema
@{
    ViewData["Title"] = "حذف السينما";
}

<style>
    .delete-container {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .cinema-logo {
        max-width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
    }
</style>

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>رجوع
    </a>
</div>

<div class="delete-container">
    <div class="alert alert-danger">
        <h3>
            <i class="fas fa-exclamation-triangle me-2"></i>
            تحذير: حذف السينما
        </h3>
        <p class="mb-0">هل أنت متأكد أنك تريد حذف هذه السينما؟</p>
    </div>

    <div class="text-center mb-4">
        @if (!string.IsNullOrEmpty(Model.Logo))
        {
            <img src="@Model.Logo" alt="@Model.Name" class="cinema-logo" />
        }
    </div>

    <h2 class="text-center mb-4">@Model.Name</h2>

    <dl class="row">
        @if (!string.IsNullOrEmpty(Model.Address))
        {
            <dt class="col-sm-4">العنوان:</dt>
            <dd class="col-sm-8">@Model.Address</dd>
        }

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <dt class="col-sm-4">الوصف:</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        }

        <dt class="col-sm-4">عدد الأفلام في هذه السينما:</dt>
        <dd class="col-sm-8">
            <span class="badge bg-primary fs-5">@Model.Movies.Count فيلم</span>
        </dd>
    </dl>

    @if (Model.Movies.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-info-circle me-2"></i>
            <strong>تنبيه:</strong> لا يمكن حذف هذه السينما لأنها تحتوي على أفلام. يجب حذف أو نقل الأفلام أولاً.
        </div>

        <h5 class="mt-4">الأفلام في هذه السينما:</h5>
        <ul class="list-group">
            @foreach (var movie in Model.Movies)
            {
                <li class="list-group-item">
                    <i class="fas fa-film me-2"></i>@movie.Name
                    <span class="badge @(movie.Status == MovieStatus.NowShowing ? "bg-success" : "bg-warning") float-end">
                        @(movie.Status == MovieStatus.NowShowing ? "يُعرض الآن" : "قريباً")
                    </span>
                </li>
            }
        </ul>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-right me-2"></i>رجوع للسينمات
            </a>
        </div>
    }
    else
    {
        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="fas fa-trash me-2"></i>تأكيد الحذف
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times me-2"></i>إلغاء
            </a>
        </form>
    }
</div>
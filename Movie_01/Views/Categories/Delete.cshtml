@model MovieApp.Models.Category
@{
    ViewData["Title"] = "حذف التصنيف";
}

<style>
    .delete-container {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    .category-image {
        max-width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
    }
</style>

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>رجوع
    </a>
</div>

<div class="delete-container">
    <div class="alert alert-danger">
        <h3>
            <i class="fas fa-exclamation-triangle me-2"></i>
            تحذير: حذف التصنيف
        </h3>
        <p class="mb-0">هل أنت متأكد أنك تريد حذف هذا التصنيف؟</p>
    </div>

    <div class="text-center mb-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" class="category-image" />
        }
    </div>

    <h2 class="text-center mb-4">@Model.Name</h2>

    <dl class="row">
        <dt class="col-sm-4">عدد الأفلام في هذا التصنيف:</dt>
        <dd class="col-sm-8">
            <span class="badge bg-primary fs-5">@Model.Movies.Count فيلم</span>
        </dd>
    </dl>

    @if (Model.Movies.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-info-circle me-2"></i>
            <strong>تنبيه:</strong> لا يمكن حذف هذا التصنيف لأنه يحتوي على أفلام. يجب حذف أو نقل الأفلام أولاً.
        </div>

        <h5 class="mt-4">الأفلام في هذا التصنيف:</h5>
        <ul class="list-group">
            @foreach (var movie in Model.Movies)
            {
                <li class="list-group-item">
                    <i class="fas fa-film me-2"></i>@movie.Name
                </li>
            }
        </ul>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-right me-2"></i>رجوع للتصنيفات
            </a>
        </div>
    }
    else
    {
        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="fas fa-trash me-2"></i>تأكيد الحذف
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times me-2"></i>إلغاء
            </a>
        </form>
    }
</div>
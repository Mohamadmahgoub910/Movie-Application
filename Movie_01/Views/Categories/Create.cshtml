@model MovieApp.Models.Category
@{
    ViewData["Title"] = "إضافة تصنيف جديد";
}

<style>
    .form-container {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    .image-preview {
        max-width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 10px;
        margin-top: 1rem;
    }
</style>

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>رجوع
    </a>
</div>

<div class="form-container">
    <h2 class="mb-4">
        <i class="fas fa-plus-circle me-2"></i>
        إضافة تصنيف جديد
    </h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control form-control-lg" placeholder="مثال: أكشن، كوميديا، دراما..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="imageFile" class="form-label">صورة التصنيف</label>
            <input type="file" name="imageFile" id="imageFile" class="form-control"
                   accept="image/*" onchange="previewImage(event)" />
            <small class="form-text text-muted">اختر صورة تعبر عن التصنيف</small>
            <img id="imagePreview" class="image-preview" style="display:none;" />
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save me-2"></i>حفظ
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times me-2"></i>إلغاء
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event) {
            const preview = document.getElementById('imagePreview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
}
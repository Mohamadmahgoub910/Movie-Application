@model MovieApp.Models.Category
@{
    ViewData["Title"] = Model.Name;
}

<style>
    .category-header {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }

    .category-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
    }

    .movie-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
        background: white;
    }

        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        .movie-card img {
            height: 300px;
            object-fit: cover;
            width: 100%;
        }
</style>

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>رجوع
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit me-2"></i>تعديل
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash me-2"></i>حذف
    </a>
</div>

<div class="category-header">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="category-image" />
            }
        </div>
        <div class="col-md-8">
            <h1 class="mb-3">@Model.Name</h1>
            <div class="alert alert-info">
                <h3 class="mb-0">
                    <i class="fas fa-film me-2"></i>
                    يحتوي هذا التصنيف على <strong>@Model.Movies.Count</strong> فيلم
                </h3>
            </div>
        </div>
    </div>
</div>

@if (Model.Movies.Any())
{
    <h2 class="mb-4">
        <i class="fas fa-video me-2"></i>
        الأفلام في تصنيف @Model.Name
    </h2>

    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-6 col-lg-4">
                <div class="movie-card">
                    <img src="@(string.IsNullOrEmpty(movie.MainImage) ? "/images/placeholder.jpg" : movie.MainImage)"
                         alt="@movie.Name" />
                    <div class="p-3">
                        <h5 class="mb-2">@movie.Name</h5>
                        <p class="text-muted small mb-2">
                            @movie.Description.Substring(0, Math.Min(80, movie.Description.Length))...
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="h5 text-primary mb-0">@movie.Price.ToString("C")</span>
                            <span class="badge @(movie.Status == MovieApp.Models.MovieStatus.NowShowing ? "bg-success" : "bg-warning")">
                                @(movie.Status == MovieApp.Models.MovieStatus.NowShowing ? "يُعرض الآن" : "قريباً")
                            </span>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                               class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-eye"></i> تفاصيل
                            </a>
                            <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id"
                               class="btn btn-sm btn-outline-warning flex-fill">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h4>لا توجد أفلام في هذا التصنيف</h4>
        <p>ابدأ بإضافة أفلام لهذا التصنيف.</p>
        <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>إضافة فيلم جديد
        </a>
    </div>
}
@model MovieApp.Models.Actor
@{
    ViewData["Title"] = "إضافة ممثل جديد";
}

<style>
    .form-container {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .image-preview {
        max-width: 300px;
        height: 300px;
        object-fit: cover;
        border-radius: 50%;
        margin: 1rem auto;
        display: block;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
</style>

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>رجوع
    </a>
</div>

<div class="form-container">
    <h2 class="mb-4">
        <i class="fas fa-user-plus me-2"></i>
        إضافة ممثل جديد
    </h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="اسم الممثل الكامل" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Bio" class="form-label"></label>
                    <textarea asp-for="Bio" class="form-control" rows="5"
                              placeholder="نبذة عن حياة وإنجازات الممثل..."></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label for="profilePictureFile" class="form-label">صورة الممثل</label>
                    <input type="file" name="profilePictureFile" id="profilePictureFile"
                           class="form-control" accept="image/*" onchange="previewImage(event)" />
                    <small class="form-text text-muted">اختر صورة واضحة للممثل</small>
                    <img id="imagePreview" class="image-preview" style="display:none;" />
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save me-2"></i>حفظ
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times me-2"></i>إلغاء
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event) {
            const preview = document.getElementById('imagePreview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
}